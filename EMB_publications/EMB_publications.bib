	keywords = {fragmented landscape, habitat amount, habitat composition, habitat configuration, metapopulation, spatial scale},
	pages = {e4037},
	file = {Full Text PDF:/Users/emiliobruna/Zotero/storage/RB96FDL5/Fletcher Jr. et al. - 2023 - Landscape experiments unlock relationships among h.pdf:application/pdf;Snapshot:/Users/emiliobruna/Zotero/storage/7DKUZ6VH/ecy.html:text/html},
